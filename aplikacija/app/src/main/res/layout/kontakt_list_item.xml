<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:orientation="vertical"

        android:paddingRight="16dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/kontakt_slike"
            android:layout_height="wrap_content"
            android:layout_width="100dp"

            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/kontakt_ime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textIsSelectable="false"
            tools:text="Ime"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"

            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/kontakt_slike"
            android:layout_toRightOf="@id/kontakt_slike" />

        <TextView
            android:id="@+id/kontakt_prezime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textIsSelectable="false"
            tools:text="Prezime"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"

            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/kontakt_ime"
            android:layout_toRightOf="@id/kontakt_ime" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kontakt_email"
            tools:text="Email"

            android:layout_toEndOf="@id/kontakt_slike"
            android:layout_below="@id/kontakt_ime"
            android:layout_toRightOf="@id/kontakt_slike"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kontakt_mobitel"
            tools:text="Mobitel"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_toEndOf="@id/kontakt_slike"
            android:layout_below="@id/kontakt_email"
            android:layout_toRightOf="@id/kontakt_slike"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>