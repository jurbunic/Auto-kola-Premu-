<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutsHolder">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topLayout"
            android:background="#01668A">

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/logo_cijeli"
                android:id="@+id/imageView_logo_cijeli"
                android:layout_height="55dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/middleLayout"
            android:paddingTop="30dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:text="Pitanje 1."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_broj"
                android:textColor="#000"
                android:textSize="30sp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/questionLayout"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView_slika" />

            <TextView
                android:text="Koja je najmanja dopuštena brzina vožnje u normalnim prometnim uvjetima ?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_pitanje"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#000"
                android:paddingBottom="5dp" />

            <CheckBox
                android:text="30 km/h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_broj1" />

            <CheckBox
                android:text="40 km/h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_broj2" />

            <CheckBox
                android:text="50 km/h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_broj3" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomLayout"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"></LinearLayout>

            <Button
                android:text="Sljedeće pitanje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_dalje"
                android:layout_weight="0" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>