<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bkl.air.foi.mdrivingschool.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutsHolder"
        android:background="#01668A"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topLayout"
            android:gravity="center"
            android:padding="15dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/logo2_bigger"
                    android:id="@+id/imageView_logo"
                    android:cropToPadding="false"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background="#00000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Premuž"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_premuz"
                    android:layout_weight="1"
                    android:textColor="#ffffffff"
                    android:textSize="40sp"
                    android:fontFamily="serif" />

                <TextView
                    android:text="AUTOŠKOLA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_autoskola"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#919B9F"
                    android:gravity="right" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottomLayout"
            android:gravity="center">

            <EditText
                android:layout_height="65dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText_username"
                android:hint="Upišite korisničko ime..."
                tools:text="Upišite korisničko ime..."
                android:background="@android:drawable/alert_light_frame"
                android:layout_width="275dp"
                android:textColor="#999EA0" />

            <EditText
                android:layout_height="65dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText_password"
                android:hint="Upišite lozinku..."
                tools:text="Upišite lozinku..."
                android:textColor="#999EA0"
                android:textSize="20sp"
                android:background="@android:drawable/alert_light_frame"
                android:layout_width="275dp" />

            <Button
                android:text="Prijava"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_prijava"
                style="@android:style/Widget.Button"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:background="@android:drawable/alert_light_frame" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_credentials"
            android:textSize="12sp"
            android:textColor="#ffffffff"
            android:text="Powered by AIR1618 - FOI © 2016. All rights reserved."
            android:textAlignment="center"
            android:gravity="bottom"
            android:paddingTop="30dp" />

    </LinearLayout>
</RelativeLayout>
