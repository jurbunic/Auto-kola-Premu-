<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="36dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:weightSum="1">

    <TextView
        android:text="Autoškola PREMUŽ je škola sa dugogodišnjim iskustvom u osposobljavanju kandidata za vozača. Da bi vam bili što bliže i dostupniji od 01.08.2006. poslujemo na dvije lokacije, u Varaždinu ul. Ivana Kukuljevića 28 i u Gornjem Vratnu, ul. S.Radića br.1. Djelatnici autoškola su stručno osposobljeni i obavljaju osposobljavanje kandidata za vozače sljedećih kategorija vozila:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textSize="16sp"
        android:id="@+id/textView4"
        android:textIsSelectable="false" />

    <TextView
        android:text="A1 (motocikl do 125 cm3)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:id="@+id/textView5" />

    <TextView
        android:text="A (motocikl sa ili bez bočne prikolice)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:id="@+id/textView6" />

    <TextView
        android:text="B (osobni automobil)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:textSize="16sp"
        android:id="@+id/textView7" />

    <TextView
        android:text="M (moped)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:textSize="16sp"
        android:id="@+id/textView8" />

    <TextView
        android:text="Autoškola PREMUŽ je na prvom mjestu po prolaznosti kandidata u Varaždinskoj županiji "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textSize="16sp"
        android:id="@+id/textView9" />

    <TextView
        android:text="Osposobljavanje se obavlja u najbržem mogućem roku što za vas, buduće kandidate, znači da nema dugih čekanja (razmaka između vožnje i sljedeće vožnje)."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textSize="16sp"
        android:id="@+id/textView10" />

    <TextView
        android:text="Autoškola  u Varaždinu obuku vrši na prometnom vježbalištu  HAK-a , dok u G.Vratnu posjeduje i koristi vlastito prometno vježbalište za obuku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textAlignment="center"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textSize="16sp"
        android:id="@+id/textView11" />

</LinearLayout>
</ScrollView>