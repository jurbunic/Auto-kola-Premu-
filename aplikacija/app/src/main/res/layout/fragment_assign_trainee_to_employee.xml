<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutScroller">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layoutsHolder">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/topLayout"
                android:background="#01668A">

                <ImageView
                    android:layout_width="match_parent"
                    app:srcCompat="@drawable/logo_cijeli"
                    android:id="@+id/imageView_logo_cijeli"
                    android:layout_height="55dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/middleLayout"
                android:paddingTop="30dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:text="Dodjela polaznika"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_dp"
                    android:textColor="#000"
                    android:textSize="30sp"
                    android:textAlignment="center" />

                <TextView
                    android:text="Molimo odaberite polaznika kojem dodjeljujete instruktora:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:textColor="#000" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dataLayout"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/currentEmployeeLayout"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:text="Ime instruktora:"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:layout_width="125dp" />

                    <TextView
                        android:text="Ime Prezime"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_dp_employee_name"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textColor="#000" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/traineePickLayout"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="25dp">

                    <TextView
                        android:text="Ime polaznika:"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_ip"
                        android:layout_weight="1"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:layout_width="125dp" />

                    <Spinner
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_ip"
                        android:layout_weight="1" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/bottomLayout"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="15dp"
                    android:gravity="center">

                    <Button
                        android:text="Dodjeli polaznika"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_assign_trainee"
                        android:background="@android:drawable/alert_light_frame"
                        android:textAlignment="center"
                        android:layout_width="200dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>