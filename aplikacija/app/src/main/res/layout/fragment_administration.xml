<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutScroller">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutsHolder">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topLayout"
            android:paddingTop="15dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:text="Administracija"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_op_adm"
                android:textColor="#000"
                android:textSize="30sp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomLayout"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="15dp">

            <TextView
                android:text="Molimo odaberite 탑eljenu aktivnost:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_mo_adm"
                android:textAlignment="center"
                android:textColor="#000"
                android:paddingBottom="15dp" />

            <Button
                android:text="Dodavanje novog polaznika"
                android:layout_width="match_parent"
                android:id="@+id/button_new_trainee_add"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"
                android:layout_height="85dp" />

            <Button
                android:text="Dodjeljivanje polaznika instruktoru"
                android:layout_width="match_parent"
                android:id="@+id/button_trainee_ins_add"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"
                android:layout_height="85dp" />

            <Button
                android:text="A탑uriranje stanja ispita"
                android:layout_width="match_parent"
                android:id="@+id/button_exam_update"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp"
                android:layout_height="85dp" />

            <Button
                android:text="A탑uriranje satova vo탑nje"
                android:layout_width="match_parent"
                android:id="@+id/button_driving_update"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="15dp"
                android:layout_height="85dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>