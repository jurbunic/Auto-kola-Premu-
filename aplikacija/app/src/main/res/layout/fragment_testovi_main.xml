<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutsHolder">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topLayout"
            android:background="#01668A">

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/logo_cijeli"
                android:id="@+id/imageView_logo_cijeli"
                android:layout_height="55dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/middleLayout"
            android:paddingTop="30dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:text="Testovi znanja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_op"
                android:textColor="#000"
                android:textSize="30sp"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottomLayout"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="30dp">

            <TextView
                android:text="Molimo odaberite željeni test:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_mo"
                android:textAlignment="center"
                android:textColor="#000"
                android:paddingBottom="15dp" />

            <Button
                android:text="Test znanja propisa"
                android:layout_width="match_parent"
                android:id="@+id/button_propisi"
                android:layout_height="100dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="5dp" />

            <Button
                android:text="Test znanja prve pomoći"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/button_prvaPomoc"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="15dp" />

            <TextView
                android:text="*Svaki test znanja se sastoji od pet nasumično odabranih pitanja iz baze podataka. Zahvaljujući tome, testovi nisu nikad identični."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="11sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/textView_addinfo" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>