<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutScroller">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp">

    <TextView
        android:text="DobrodoÅ¡li!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/employee_welcome"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/employee_user_name"
        android:textSize="18dp"
        android:textAlignment="center"
        android:text="ime+prezime"
        android:layout_below="@+id/employee_welcome"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_below="@+id/employee_user_name"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/thin_line"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

    </View>

    <LinearLayout
        android:layout_below="@+id/employee_user_name"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutsHolder"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/img_polaznici"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:id="@+id/employee_main_img_btn_polaznici"
            style="@android:style/Widget.Material.ImageButton"
            android:scaleType="fitXY"
            android:cropToPadding="false"
            android:adjustViewBounds="false" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/img_raspored"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:id="@+id/employee_main_img_btn_raspored"
            style="@android:style/Widget.Material.ImageButton"
            android:scaleType="fitXY"
            android:cropToPadding="false"
            android:adjustViewBounds="false" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/img_testovi1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="15dp"
            android:id="@+id/imageButton_tzz_zap"
            style="@android:style/Widget.Material.ImageButton"
            android:scaleType="fitXY"
            android:cropToPadding="false"
            android:adjustViewBounds="false" />



    </LinearLayout>

</RelativeLayout>
</ScrollView>