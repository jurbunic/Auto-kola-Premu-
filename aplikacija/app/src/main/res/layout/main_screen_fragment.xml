<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutScroller">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ViewFlipper
            android:id="@+id/bckgrndViewFlipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/img_view1"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/prvomjesto"
                android:cropToPadding="true" />
            <ImageView
                android:id="@+id/img_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/kategorijaa"/>
            <ImageView
                android:id="@+id/img_view3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/kategorijaa1"/>
            <ImageView
                android:id="@+id/img_view4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/kategorijab1"/>
        </ViewFlipper>

    </LinearLayout>

    <ImageButton
        android:layout_width="match_parent"
        app:srcCompat="@drawable/img_online_upisi1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:id="@+id/imageButton"
        android:layout_weight="0.17"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        style="@android:style/Widget.Material.ImageButton"
        android:cropToPadding="false"
        android:adjustViewBounds="false" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/img_testovi1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:id="@+id/imageButton2"
        style="@android:style/Widget.Material.ImageButton"
        android:scaleType="fitXY"
        android:cropToPadding="false"
        android:adjustViewBounds="false" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/img_karta1"
        android:id="@+id/imageButton3"
        android:layout_weight="0.19"
        style="@android:style/Widget.Material.ImageButton"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:adjustViewBounds="false" />
    <include
        layout="@layout/ads_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
</ScrollView>