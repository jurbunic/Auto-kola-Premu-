<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutsHolder">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topLayout"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:text="@string/opcije"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_app_opt"
                android:textStyle="normal|bold"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <ImageView
                android:layout_height="20dp"
                app:srcCompat="@drawable/thin_line"
                android:id="@+id/thin_line_1"
                android:layout_gravity="center"
                android:layout_width="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/trainee_options_holder"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trainee_options_text"
                android:text="Način slanja obavijesti: "
                android:gravity="left"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorTertiary" />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup_notifications">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Push notifikacija"
                    android:id="@+id/employee_options_push"
                    android:textSize="16dp"
                    android:textColor="?android:attr/textColorTertiary" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:id="@+id/employee_options_mail"
                    android:textSize="16dp"
                    android:textColor="?android:attr/textColorTertiary" />

            </RadioGroup>



        </LinearLayout>

    </LinearLayout>
</LinearLayout>